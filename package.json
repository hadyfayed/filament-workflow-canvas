{
  "name": "@hadyfayed/filament-workflow-canvas",
  "version": "1.0.0",
  "description": "Visual workflow builder and canvas component for Filament applications",
  "type": "module",
  "main": "dist/index.es.js",
  "module": "dist/index.es.js",
  "types": "dist/types/core.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "types": "./dist/types/index.d.ts"
    },
    "./bootstrap": {
      "import": "./dist/bootstrap.es.js",
      "types": "./dist/types/bootstrap.d.ts"
    },
    "./WorkflowCanvas": {
      "import": "./dist/WorkflowCanvas.es.js",
      "types": "./dist/types/WorkflowCanvas.d.ts"
    },
    "./NodePropertiesPanel": {
      "import": "./dist/NodePropertiesPanel.es.js",
      "types": "./dist/types/NodePropertiesPanel.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "config",
    "resources",
    "src",
    "database"
  ],
  "scripts": {
    "build": "rimraf dist && vite build && tsc --emitDeclarationOnly --outDir dist/types",
    "dev": "vite build --watch",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"resources/**/*.{ts,tsx}\"",
    "analyze": "vite build --mode analyze",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "laravel",
    "filament",
    "react",
    "workflow",
    "canvas",
    "visual",
    "builder",
    "reactflow"
  ],
  "author": "Hady Fayed <hadyfayed@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@hadyfayed/filament-react-wrapper": "^1.0.0"
  },
  "peerDependencies": {
    "@heroicons/react": "^2.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "reactflow": "^11.10.4",
    "uuid": "^11.1.0",
    "@hadyfayed/filament-react-wrapper": "^1.0.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-typescript": "^7.27.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "terser": "^5.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.0.0",
    "vitest": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hadyfayed/filament-workflow-canvas"
  },
  "bugs": {
    "url": "https://github.com/hadyfayed/filament-workflow-canvas/issues"
  },
  "homepage": "https://github.com/hadyfayed/filament-workflow-canvas#readme"
}
